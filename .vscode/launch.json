    "version": "0.2.0",
    "configurations": [
        {
            "name": "Meli Explore All",
            "type": "node",
            "request": "launch",
            "args": ["./src/cli.ts", "explore", "--explorer", "mercadolibre:all"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "outputCapture": "std",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "Meli Extract",
            "type": "node",
            "request": "launch",
            "args": ["./src/cli.ts", "extract", "--filter", "mercadolibre:new"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "outputCapture": "std",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "Meli Explore Today",
            "type": "node",
            "request": "launch",
            "args": ["./src/cli.ts", "explore", "--explorer", "mercadolibre:today"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "outputCapture": "std",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ]
}